{
  "name": "vscode-tailwind-css-explorer",
  "displayName": "Tailwind CSS Explorer",
  "description": "Tailwind CSS Explorer",
  "version": "0.1.0",
  "publisher": "vscode-tailwind-css-explorer",
  "author": "Peter Mekhaeil <mekhaeil.peter@gmail.com>",
  "license": "MIT",
  "enableProposedApi": true,
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:TailwindCssPanel"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "package-explorer",
          "title": "Tailwind CSS",
          "icon": "media/dep.svg"
        }
      ]
    },
    "views": {
      "package-explorer": [
        {
          "type": "webview",
          "id": "TailwindCssPanel",
          "name": "Explorer",
          "icon": "media/dep.svg",
          "contextualTitle": "Tailwind CSS"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "devDependencies": {
    "@types/node": "^14.14.7",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "eslint": "^7.1.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "dlv": "^1.1.3",
    "glob": "^7.1.6"
  }
}
